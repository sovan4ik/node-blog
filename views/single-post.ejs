<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>
<body>
    <%- include('./partials/navbar'); %>
    <div class="container">
        <div class="row valign-wrapper">
            <div class="col s8">
                <h1><%= title %></h1>
            </div>
        </div>
        <% if (blog.length) { %>
            <% blog.forEach(blog => { %>
                <div class="row">                    
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title"><%= blog.title %></span>
                            <p><%= blog.description %></p>
                        </div>
                        <div class="row card-action">
                            <div class="grid-example col s12 m8">
                                <a href="#" class="waves-effect btn purple accent-1">Open</a>
                                <a href="#" class="waves-effect btn teal accent-3">Rename</a>
                                <form action="/" method="DELETE">
                                    <button type="submit" class="waves-effect btn red delete-post">Delete <%= blog._id %></button>
                                </form>
                            </div>
                            <div class="grid-example col s12 m4">
                                <a href="#" class="waves-effect btn red">Date: <%= utils.postTime(blog.date) %></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
            
        Всего записей: <%= blog.length %>
        <% } else { %>
        <p>No articles!</p>
        <% } %>
    </div>
    <%- include('./partials/footer'); %>
</body>

</html>