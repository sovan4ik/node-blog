<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>
<body>
    <%- include('./partials/navbar'); %>
    <div class="container">
        <div class="row valign-wrapper">
            <div class="col s12">
                <h1><%= title %></h1>
            </div>
        </div>
        <% if (blog.length) { %>
            <% utils.sortFromNewToOld(blog) %>
            <!-- <!% utils.sortFromOldToNew(blog) %>  -->
            <% blog.forEach(blog => { %>
                <div class="row">                    
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <a href="/<%= blog._id %>" style="color: #ffffff !important;"><span class="card-title" style="overflow-x: auto"><%= blog.title %></span></a>
                            <p><%= blog.description %></p>
                        </div>
                        <div class="row card-action">
                            <div class="grid-example col s12 m8">
                                <div class="row">
                                    <div class="col">
                                        <a href="/<%= blog._id %>" class="waves-effect btn purple accent-1">Open</a>
                                    </div>
                                    <div class="col">
                                        <a href="/edit/<%= blog._id %>" class="waves-effect btn teal accent-3">Edit</a>
                                    </div>
                                    <div class="col">
                                        <form action="/<%= blog._id %>?_method=DELETE" method="POST">
                                            <button type="submit" class="waves-effect btn red delete-post">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="grid-example col s12 m4">
                                <a href="#" class="waves-effect btn red">Date: <%= utils.postTime(blog.date) %></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
            
        Total posts: <%= blog.length %>
        <% } else { %>
        <p>No articles!</p>
        <% } %>
    </div>
    <%- include('./partials/footer'); %>
</body>

</html>